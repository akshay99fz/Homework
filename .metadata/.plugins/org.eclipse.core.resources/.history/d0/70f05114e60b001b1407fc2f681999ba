// Program to compute sin(x)
import java.util.Scanner;
public class ques8 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int x=sc.nextInt();
		int n=sc.nextInt();
		double power,sum=0;
		int i,k=1,j,fact=1;
		for(i=1;i<=n;i+=2)
		{
			j=i;
			while(j>0)
			{
			fact=fact*j;
			j--;
			}
			power=Math.pow(x,i);
			if(k%2==1)
			{
				sum=sum+(power/fact);
				k++;
			}
			else if(k%2==0)
			{
				sum=sum-(power/fact);
				k++;
			}
			
		}
		System.out.println(sum);
	}

}
